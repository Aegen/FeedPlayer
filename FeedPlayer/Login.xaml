<Window x:Class="FeedPlayer.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="234" Width="297">
    <Grid Margin="0,0,2,2">
        <TextBox x:Name="UserNameBox" HorizontalAlignment="Left" Height="23" Margin="90,45,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <CheckBox x:Name="StayLoggedInBox" Content="CheckBox" HorizontalAlignment="Left" Margin="109,107,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoginButton" Content="Button" HorizontalAlignment="Left" Margin="109,141,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="90,76,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
